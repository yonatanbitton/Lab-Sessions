#format is target-name: target dependencies
#{-tab-}actions

# All Targets
all: task1b

# Tool invocations
# Executable "task0" depends on the files numbers.o and task1b.o.
task1b:  task1b.o start.o util.o 
	ld -g -melf_i386 util.o start.o task1b.o -o task1b

# Depends on the source and header files
start.o: start.s
	nasm -g -f elf start.s -o start.o	

task1b.o: task1b.c
	gcc -g -m32 -Wall -ansi -c -nostdlib -fno-stack-protector task1b.c -o task1b.o
 
util.o: util.c
	gcc -g -m32 -Wall -ansi -c -nostdlib -fno-stack-protector util.c -o util.o

#tell make that "clean" is not a file name!
.PHONY: clean

#Clean the build directory
clean: 
	rm -f *.o task1b
